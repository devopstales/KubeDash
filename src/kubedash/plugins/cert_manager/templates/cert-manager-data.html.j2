
{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Plugins</span></li>
          <li class="breadcrumb-item"><a href="/plugins/cert-manager">Cert-Manager</a></li>
          <li class="breadcrumb-item">{{ object_type|replace("_", " ")|capitalize }}</li>
          <li class="breadcrumb-item active" aria-current="page">{{ object_data.name }}</li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 fw-bold text-primary">Cert-Manager</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="podInfoTable" width="100%" cellspacing="0">
                {% if object_type == "cluster_issuer" %}
                <tr>
                    <th>Name:</th>
                    <td>{{ object_data.name }}</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>
                    {% if object_data.status == 'True' %}
                        <span class="badge bg-success">{{ object_data.reason }}</span>
                    {% else %}
                        <span class="badge bg-danger">{{ object_data.reason }}</span>
                    {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Status message:</th>
                    <td>{{ object_data.message }}</td>
                </tr>
                <tr>
                    <th>Issuer Type:</th>
                    <td>{{ object_data.type }}</td>
                </tr>
                <tr>
                    <th>Issuer Data:</th>
                    <td>{{ object_data.issuer_data }}</td>
                </tr>
                {% elif object_type == "issuer" %}
                <tr>
                    <th>Name:</th>
                    <td>{{ object_data.name }}</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>
                    {% if object_data.status == 'True' %}
                        <span class="badge bg-success">{{ object_data.reason }}</span>
                    {% else %}
                        <span class="badge bg-danger">{{ object_data.reason }}</span>
                    {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Status message:</th>
                    <td>{{ object_data.message }}</td>
                </tr>
                <tr>
                    <th>Issuer Data:</th>
                    <td>{{ object_data.issuer_data }}</td>
                </tr>
                {% elif object_type == "certificate_request" %}
                <tr>
                    <th>Name:</th>
                    <td>{{ object_data.name }}</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>
                    {% if object_data.status == 'True' %}
                        <span class="badge bg-success">{{ object_data.reason }}</span>
                    {% else %}
                        <span class="badge bg-danger">{{ object_data.reason }}</span>
                    {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Status message:</th>
                    <td>{{ object_data.message }}</td>
                </tr>
                <tr>
                    <th>Issuer:</th>
                    <td>{{ object_data.issuer_type }}/{{ object_data.issuer }}</td>
                </tr>
                <tr>
                    <th>Owner:</th>
                    <td>{{ object_data.owner_type }}/{{ object_data.owner }}</td>
                </tr>
                {% elif object_type == "certificate" %}
                <tr>
                    <th>Name:</th>
                    <td>{{ object_data.name }}</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>
                    {% if object_data.status == 'True' %}
                        <span class="badge bg-success">{{ object_data.reason }}</span>
                    {% else %}
                        <span class="badge bg-danger">{{ object_data.reason }}</span>
                    {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Status message:</th>
                    <td>{{ object_data.message }}</td>
                </tr>
                <tr>
                    <th>Validity Not After:</th>
                    <td>{{ object_data.cert_valid }}</td>
                </tr>
                <tr>
                    <th>Certificate:</th>
                    <td>
                        <form action="/security/secrets" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ object_data.secret_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ object_data.secret_name }}</a>
                        </form>
                    </td>
                </tr>
                <tr>
                    <th>Hostnames:</th>
                    <td>
                        {% for hostname in object_data.hostnames %}
                            {{ hostname }}<br>
                        {% endfor %}
                    </td>
                </tr>
                {% endif %}
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snipet.html.j2" %}
{% endblock %}

{% block tail_js %}
{% endblock %}
