{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item"><span>Plugins</span></li>
                <li class="breadcrumb-item"><a href="/plugins/gateway-api">Gateway API</a></li>
                <li class="breadcrumb-item"><span>GatewayClass</span></li>
                <li class="breadcrumb-item active"><span>{{ gateway_class.name }}</span></li>
            </ol>
        </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">GatewayClass: {{ gateway_class.name }}</h6>
        <div>
            {% if gateway_class.status == 'True' %}
            <span class="badge bg-success">{{ gateway_class.status_reason or 'Accepted' }}</span>
            {% else %}
            <span class="badge bg-danger">{{ gateway_class.status_reason or 'Pending' }}</span>
            {% endif %}
        </div>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nav-overview-tab" href="#nav-overview" role="tab" aria-controls="nav-overview" aria-selected="true" data-bs-toggle="tab">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-conditions-tab" href="#nav-conditions" role="tab" aria-controls="nav-conditions" aria-selected="false" data-bs-toggle="tab">Conditions</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-gateways-tab" href="#nav-gateways" role="tab" aria-controls="nav-gateways" aria-selected="false" data-bs-toggle="tab">Using Gateways ({{ using_gateways|length }})</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-events-tab" href="#nav-events" role="tab" aria-controls="nav-events" aria-selected="false" data-bs-toggle="tab">Events ({{ events|length }})</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-yaml-tab" href="#nav-yaml" role="tab" aria-controls="nav-yaml" aria-selected="false" data-bs-toggle="tab">YAML</a>
            </li>
        </ul>
        
        <div class="tab-content" id="nav-tabContent">
            <!-- OVERVIEW TAB -->
            <div class="tab-pane fade show active" id="nav-overview" role="tabpanel" aria-labelledby="nav-overview-tab">
                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Metadata</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 30%;">Name</th>
                                        <td>{{ gateway_class.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Controller</th>
                                        <td><code>{{ gateway_class.controller }}</code></td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ gateway_class.description or '-' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Age</th>
                                        <td>{{ gateway_class.age }}</td>
                                    </tr>
                                    <tr>
                                        <th>Created</th>
                                        <td>{{ gateway_class.creation_timestamp }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Status</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 30%;">Accepted</th>
                                        <td>
                                            {% if gateway_class.status == 'True' %}
                                            <span class="badge bg-success">Yes</span>
                                            {% else %}
                                            <span class="badge bg-danger">No</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Reason</th>
                                        <td><code>{{ gateway_class.status_reason }}</code></td>
                                    </tr>
                                    <tr>
                                        <th>Message</th>
                                        <td>{{ gateway_class.status_message or '-' }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        {% if gateway_class.parameters_ref %}
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Parameters Reference</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 30%;">Group</th>
                                        <td>{{ gateway_class.parameters_ref.group or '-' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Kind</th>
                                        <td>{{ gateway_class.parameters_ref.kind or '-' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ gateway_class.parameters_ref.name or '-' }}</td>
                                    </tr>
                                    {% if gateway_class.parameters_ref.namespace %}
                                    <tr>
                                        <th>Namespace</th>
                                        <td>{{ gateway_class.parameters_ref.namespace }}</td>
                                    </tr>
                                    {% endif %}
                                </table>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                
                <!-- Labels -->
                {% if gateway_class.labels %}
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Labels</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="50%">Key</th>
                                    <th width="50%">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, value in gateway_class.labels.items() %}
                                <tr>
                                    <td>{{ key }}</td>
                                    <td>{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endif %}
                
                <!-- Annotations -->
                {% if gateway_class.annotations and gateway_class.annotations|length > 0 %}
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Annotations</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="50%">Key</th>
                                    <th width="50%">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, value in gateway_class.annotations.items() %}
                                <tr>
                                    <td style="word-break: break-all;"><code>{{ key }}</code></td>
                                    <td style="word-break: break-all;">{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- CONDITIONS TAB -->
            <div class="tab-pane fade" id="nav-conditions" role="tabpanel" aria-labelledby="nav-conditions-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Conditions</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="conditionsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Reason</th>
                                        <th>Message</th>
                                        <th>Last Transition</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for cond in gateway_class.conditions %}
                                    <tr>
                                        <td>
                                            {% if cond.type == 'Accepted' and cond.status == 'True' %}
                                            <span class="badge bg-success">{{ cond.type }}</span>
                                            {% elif cond.type == 'Accepted' %}
                                            <span class="badge bg-danger">{{ cond.type }}</span>
                                            {% else %}
                                            <span class="badge bg-secondary">{{ cond.type }}</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ cond.status }}</td>
                                        <td><code>{{ cond.reason }}</code></td>
                                        <td>{{ cond.message }}</td>
                                        <td>{{ cond.lastTransitionTime }}</td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No conditions</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- GATEWAYS TAB -->
            <div class="tab-pane fade" id="nav-gateways" role="tabpanel" aria-labelledby="nav-gateways-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Gateways Using This Class</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="gatewaysTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Name</th>
                                        <th>Namespace</th>
                                        <th>Listeners</th>
                                        <th>Addresses</th>
                                        <th>Age</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for gw in using_gateways %}
                                    <tr>
                                        <td>
                                            {% if gw.programmed_status == 'True' %}
                                            <span class="badge bg-success">Programmed</span>
                                            {% elif gw.accepted_status == 'True' %}
                                            <span class="badge bg-info">Accepted</span>
                                            {% else %}
                                            <span class="badge bg-warning text-dark">{{ gw.programmed_reason or 'Pending' }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="/plugins/gateway-api/gateway/{{ gw.namespace }}/{{ gw.name }}">{{ gw.name }}</a>
                                        </td>
                                        <td>{{ gw.namespace }}</td>
                                        <td>
                                            {% for listener in gw.listeners %}
                                            <span class="badge bg-light text-dark me-1">
                                                {{ listener.protocol }}:{{ listener.port }}
                                            </span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% for addr in gw.addresses %}
                                            <code>{{ addr.split(':')[-1] }}</code>
                                            {% else %}
                                            <span class="text-muted">-</span>
                                            {% endfor %}
                                        </td>
                                        <td>{{ gw.age }}</td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No Gateways using this class</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- EVENTS TAB -->
            <div class="tab-pane fade" id="nav-events" role="tabpanel" aria-labelledby="nav-events-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Kubernetes Events</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="eventsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Last Seen</th>
                                        <th>Type</th>
                                        <th>Reason</th>
                                        <th>Message</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                    <tr>
                                        <td>{{ event.last_timestamp or event.first_timestamp or 'Unknown' }}</td>
                                        <td>
                                            {% if event.type == 'Normal' %}
                                            <span class="badge bg-success">{{ event.type }}</span>
                                            {% elif event.type == 'Warning' %}
                                            <span class="badge bg-warning text-dark">{{ event.type }}</span>
                                            {% else %}
                                            <span class="badge bg-secondary">{{ event.type }}</span>
                                            {% endif %}
                                        </td>
                                        <td><code>{{ event.reason }}</code></td>
                                        <td>{{ event.message }}</td>
                                        <td>{{ event.count }}</td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No events found</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- YAML TAB -->
            <div class="tab-pane fade" id="nav-yaml" role="tabpanel" aria-labelledby="nav-yaml-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Resource YAML</h6>
                    </div>
                    <div class="card-body">
                        <pre><code class="language-json">{% autoescape false %}{{ gateway_class.raw | tojson(indent=2) | replace("<", "&lt;") | replace(">", "&gt;") }}{% endautoescape %}</code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% include "segments/highlight_snippet.html.j2" %}
{% endblock %}

{% block add_tail_js %}
<script>
$(document).ready(function() {
    $('#gatewaysTable').DataTable({
        order: [[1, 'asc']],
        pageLength: 25
    });
    $('#conditionsTable').DataTable({
        paging: false,
        searching: false,
        info: false
    });
    // Only initialize events table if there are events
    if ($('#eventsTable tbody tr').filter(function() { return !$(this).find('td[colspan]').length; }).length > 0) {
        $('#eventsTable').DataTable({
            order: [[0, 'desc']]
        });
    }
});
</script>
{% endblock %}
