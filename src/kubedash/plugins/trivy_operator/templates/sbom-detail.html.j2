{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item"><span>Plugins</span></li>
                <li class="breadcrumb-item"><a href="/plugins/trivy-operator">Trivy Operator</a></li>
                <li class="breadcrumb-item"><span>SBOM Report</span></li>
                <li class="breadcrumb-item active"><span>{{ report.namespace }}/{{ report.name }}</span></li>
            </ol>
        </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">SBOM Report: {{ report.name }}</h6>
        <div>
            {% if report.summary.componentsCount > 0 %}
            <span class="badge bg-info">Components: {{ report.summary.componentsCount }}</span>
            {% endif %}
            {% if report.summary.dependenciesCount > 0 %}
            <span class="badge bg-secondary">Dependencies: {{ report.summary.dependenciesCount }}</span>
            {% endif %}
        </div>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nav-overview-tab" href="#nav-overview" role="tab" aria-controls="nav-overview" aria-selected="true" data-bs-toggle="tab">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-components-tab" href="#nav-components" role="tab" aria-controls="nav-components" aria-selected="false" data-bs-toggle="tab">Components ({{ report.components|length }})</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-events-tab" href="#nav-events" role="tab" aria-controls="nav-events" aria-selected="false" data-bs-toggle="tab">Events ({{ events|length }})</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-yaml-tab" href="#nav-yaml" role="tab" aria-controls="nav-yaml" aria-selected="false" data-bs-toggle="tab">YAML</a>
            </li>
        </ul>
        
        <div class="tab-content" id="nav-tabContent">
            <!-- OVERVIEW TAB -->
            <div class="tab-pane fade show active" id="nav-overview" role="tabpanel" aria-labelledby="nav-overview-tab">
                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Metadata</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 30%;">Name</th>
                                        <td>{{ report.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Namespace</th>
                                        <td>{{ report.namespace }}</td>
                                    </tr>
                                    <tr>
                                        <th>Resource</th>
                                        <td>{{ report.resource_kind }}/{{ report.resource_name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Container</th>
                                        <td><code>{{ report.container_name }}</code></td>
                                    </tr>
                                    {% if report.image_ref %}
                                    <tr>
                                        <th>Image</th>
                                        <td><code>{{ report.image_ref }}</code></td>
                                    </tr>
                                    {% endif %}
                                    {% if report.registry and report.registry.server %}
                                    <tr>
                                        <th>Registry</th>
                                        <td><code>{{ report.registry.server }}</code></td>
                                    </tr>
                                    {% endif %}
                                    {% if report.image.repository %}
                                    <tr>
                                        <th>Repository</th>
                                        <td><code>{{ report.image.repository }}</code></td>
                                    </tr>
                                    {% endif %}
                                    {% if report.image.tag %}
                                    <tr>
                                        <th>Tag</th>
                                        <td><code>{{ report.image.tag }}</code></td>
                                    </tr>
                                    {% endif %}
                                    <tr>
                                        <th>Age</th>
                                        <td>{{ report.age }}</td>
                                    </tr>
                                    <tr>
                                        <th>Created</th>
                                        <td>{{ report.creation_timestamp }}</td>
                                    </tr>
                                    {% if report.update_timestamp %}
                                    <tr>
                                        <th>Updated</th>
                                        <td>{{ report.update_timestamp }}</td>
                                    </tr>
                                    {% endif %}
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Summary</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 50%;">Components</th>
                                        <td><span class="badge bg-info">{{ report.summary.get('componentsCount', 0) or 0 }}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Dependencies</th>
                                        <td><span class="badge bg-secondary">{{ report.summary.get('dependenciesCount', 0) or 0 }}</span></td>
                                    </tr>
                                </table>
                                {% if report.scanner %}
                                <hr>
                                <h6 class="font-weight-bold">Scanner</h6>
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    {% if report.scanner.name %}
                                    <tr>
                                        <th style="width: 50%;">Name</th>
                                        <td>{{ report.scanner.name }}</td>
                                    </tr>
                                    {% endif %}
                                    {% if report.scanner.vendor %}
                                    <tr>
                                        <th>Vendor</th>
                                        <td>{{ report.scanner.vendor }}</td>
                                    </tr>
                                    {% endif %}
                                    {% if report.scanner.version %}
                                    <tr>
                                        <th>Version</th>
                                        <td>{{ report.scanner.version }}</td>
                                    </tr>
                                    {% endif %}
                                </table>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- COMPONENTS TAB -->
            <div class="tab-pane fade" id="nav-components" role="tabpanel" aria-labelledby="nav-components-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="componentsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Version</th>
                                        <th>Type</th>
                                        <th>PURL</th>
                                        <th>Licenses</th>
                                        <th>Supplier</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for component in report.components %}
                                    <tr>
                                        <td><strong>{{ component.name or '-' }}</strong></td>
                                        <td>{{ component.version or '-' }}</td>
                                        <td>
                                            {% if component.type == 'library' %}
                                            <span class="badge bg-primary">Library</span>
                                            {% elif component.type == 'operating-system' %}
                                            <span class="badge bg-info">OS</span>
                                            {% elif component.type == 'container' %}
                                            <span class="badge bg-secondary">Container</span>
                                            {% else %}
                                            <span class="badge bg-secondary">{{ component.type or '-' }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if component.purl %}
                                            <code style="font-size: 0.85em;">{{ component.purl }}</code>
                                            {% else %}
                                            <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if component.licenses %}
                                                {% for license in component.licenses %}
                                                    {% if license.expression %}
                                                    <span class="badge bg-light text-dark">{{ license.expression }}</span>
                                                    {% elif license.license and license.license.id %}
                                                    <span class="badge bg-light text-dark">{{ license.license.id }}</span>
                                                    {% endif %}
                                                {% endfor %}
                                            {% else %}
                                            <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if component.supplier and component.supplier.name %}
                                            {{ component.supplier.name }}
                                            {% else %}
                                            <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td class="text-center text-muted" colspan="6">No components found</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- EVENTS TAB -->
            <div class="tab-pane fade" id="nav-events" role="tabpanel" aria-labelledby="nav-events-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-body">
                        {% if events %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Reason</th>
                                        <th>Message</th>
                                        <th>Count</th>
                                        <th>Last Seen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                    <tr>
                                        <td>
                                            {% if event.type == 'Warning' %}
                                            <span class="badge bg-warning text-dark">{{ event.type }}</span>
                                            {% else %}
                                            <span class="badge bg-info">{{ event.type }}</span>
                                            {% endif %}
                                        </td>
                                        <td><code>{{ event.reason }}</code></td>
                                        <td>{{ event.message }}</td>
                                        <td>{{ event.count }}</td>
                                        <td>{{ event.last_timestamp or event.first_timestamp or '-' }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <p class="text-muted">No events found</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- YAML TAB -->
            <div class="tab-pane fade" id="nav-yaml" role="tabpanel" aria-labelledby="nav-yaml-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Resource YAML</h6>
                    </div>
                    <div class="card-body">
                        <pre><code class="language-yaml">{% autoescape false %}{{ report.raw | tojson(indent=2) | replace("<", "&lt;") | replace(">", "&gt;") }}{% endautoescape %}</code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% include "segments/highlight_snippet.html.j2" %}
{% endblock %}

{% block add_tail_js %}
<script>
$(document).ready(function() {
    $('#componentsTable').DataTable({
        "order": [[0, "asc"]], // Sort by name
        "pageLength": 25
    });
});
</script>
{% endblock %}
