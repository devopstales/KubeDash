{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item"><span>Plugins</span></li>
                <li class="breadcrumb-item"><a href="/plugins/trivy-operator">Trivy Operator</a></li>
                <li class="breadcrumb-item"><span>Exposed Secret Report</span></li>
                <li class="breadcrumb-item active"><span>{{ report.namespace }}/{{ report.name }}</span></li>
            </ol>
        </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Exposed Secret Report: {{ report.name }}</h6>
        <div>
            {% if report.summary.criticalCount > 0 %}
            <span class="badge bg-danger">Critical: {{ report.summary.criticalCount }}</span>
            {% endif %}
            {% if report.summary.highCount > 0 %}
            <span class="badge bg-warning text-dark">High: {{ report.summary.highCount }}</span>
            {% endif %}
        </div>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nav-overview-tab" href="#nav-overview" role="tab" aria-controls="nav-overview" aria-selected="true" data-bs-toggle="tab">Overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-secrets-tab" href="#nav-secrets" role="tab" aria-controls="nav-secrets" aria-selected="false" data-bs-toggle="tab">Secrets ({{ report.secrets|length }})</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-events-tab" href="#nav-events" role="tab" aria-controls="nav-events" aria-selected="false" data-bs-toggle="tab">Events ({{ events|length }})</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-yaml-tab" href="#nav-yaml" role="tab" aria-controls="nav-yaml" aria-selected="false" data-bs-toggle="tab">YAML</a>
            </li>
        </ul>
        
        <div class="tab-content" id="nav-tabContent">
            <!-- OVERVIEW TAB -->
            <div class="tab-pane fade show active" id="nav-overview" role="tabpanel" aria-labelledby="nav-overview-tab">
                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Metadata</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 30%;">Name</th>
                                        <td>{{ report.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Namespace</th>
                                        <td>{{ report.namespace }}</td>
                                    </tr>
                                    <tr>
                                        <th>Resource</th>
                                        <td>{{ report.resource_kind }}/{{ report.resource_name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Age</th>
                                        <td>{{ report.age }}</td>
                                    </tr>
                                    <tr>
                                        <th>Created</th>
                                        <td>{{ report.creation_timestamp }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Summary</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered" width="100%" cellspacing="0">
                                    <tr>
                                        <th style="width: 50%;">Critical</th>
                                        <td><span class="badge bg-danger">{{ report.summary.criticalCount or 0 }}</span></td>
                                    </tr>
                                    <tr>
                                        <th>High</th>
                                        <td><span class="badge bg-warning text-dark">{{ report.summary.highCount or 0 }}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Medium</th>
                                        <td><span class="badge bg-info">{{ report.summary.mediumCount or 0 }}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Low</th>
                                        <td><span class="badge bg-primary">{{ report.summary.lowCount or 0 }}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Total</th>
                                        <td><strong>{{ (report.summary.criticalCount or 0) + (report.summary.highCount or 0) + (report.summary.mediumCount or 0) + (report.summary.lowCount or 0) }}</strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- SECRETS TAB -->
            <div class="tab-pane fade" id="nav-secrets" role="tabpanel" aria-labelledby="nav-secrets-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="secretsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Rule ID</th>
                                        <th>Severity</th>
                                        <th>Category</th>
                                        <th>Title</th>
                                        <th>Target</th>
                                        <th>Match</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if report.secrets %}
                                        {% for secret in report.secrets %}
                                        <tr>
                                            <td><code>{{ secret.ruleID or '-' }}</code></td>
                                            <td>
                                                {% if secret.severity == 'CRITICAL' %}
                                                <span class="badge bg-danger">CRITICAL</span>
                                                {% elif secret.severity == 'HIGH' %}
                                                <span class="badge bg-warning text-dark">HIGH</span>
                                                {% elif secret.severity == 'MEDIUM' %}
                                                <span class="badge bg-info">MEDIUM</span>
                                                {% elif secret.severity == 'LOW' %}
                                                <span class="badge bg-primary">LOW</span>
                                                {% else %}
                                                <span class="badge bg-secondary">{{ secret.severity or '-' }}</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ secret.category or '-' }}</td>
                                            <td>{{ secret.title or '-' }}</td>
                                            <td><code>{{ secret.target or '-' }}</code></td>
                                            <td><code class="text-danger">{{ secret.match or '-' }}</code></td>
                                        </tr>
                                        {% endfor %}
                                    {% else %}
                                    <tr>
                                        <td class="text-center text-muted" colspan="6">No exposed secrets found</td>
                                    </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- EVENTS TAB -->
            <div class="tab-pane fade" id="nav-events" role="tabpanel" aria-labelledby="nav-events-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-body">
                        {% if events %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Reason</th>
                                        <th>Message</th>
                                        <th>Count</th>
                                        <th>Last Seen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                    <tr>
                                        <td>
                                            {% if event.type == 'Warning' %}
                                            <span class="badge bg-warning text-dark">{{ event.type }}</span>
                                            {% else %}
                                            <span class="badge bg-info">{{ event.type }}</span>
                                            {% endif %}
                                        </td>
                                        <td><code>{{ event.reason }}</code></td>
                                        <td>{{ event.message }}</td>
                                        <td>{{ event.count }}</td>
                                        <td>{{ event.last_timestamp or event.first_timestamp or '-' }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <p class="text-muted">No events found</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- YAML TAB -->
            <div class="tab-pane fade" id="nav-yaml" role="tabpanel" aria-labelledby="nav-yaml-tab">
                <div class="card shadow mb-4 mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Resource YAML</h6>
                    </div>
                    <div class="card-body">
                        <pre><code class="language-yaml">{% autoescape false %}{{ report.raw | tojson(indent=2) | replace("<", "&lt;") | replace(">", "&gt;") }}{% endautoescape %}</code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% include "segments/highlight_snippet.html.j2" %}
{% endblock %}

{% block add_tail_js %}
<script>
$(document).ready(function() {
    // Only initialize DataTable if there are actual data rows (not the "No secrets found" row)
    if ($('#secretsTable tbody tr').filter(function() { 
        return !$(this).find('td[colspan]').length; 
    }).length > 0) {
        $('#secretsTable').DataTable({
            "order": [[1, "desc"]], // Sort by severity
            "pageLength": 25
        });
    }
});
</script>
{% endblock %}
