{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item"><span>Plugins</span></li>
                <li class="breadcrumb-item active"><span>Flux</span></li>
            </ol>
        </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 fw-bold text-primary">Flux-CD Objects</h6>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs mb-3" id="fluxTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="sources-tab" data-bs-toggle="tab" data-bs-target="#sources" type="button" role="tab">Sources</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="kustomizations-tab" data-bs-toggle="tab" data-bs-target="#kustomizations" type="button" role="tab">Kustomizations</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="helm-tab" data-bs-toggle="tab" data-bs-target="#helm" type="button" role="tab">Helm Releases</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="notifications-tab" data-bs-toggle="tab" data-bs-target="#notifications" type="button" role="tab">Notifications</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="connections-tab" data-bs-toggle="tab" data-bs-target="#connections" type="button" role="tab">Connections</button>
            </li>
        </ul>

        <div class="tab-content" id="fluxTabsContent">

            <!-- SOURCES TAB -->
            <div class="tab-pane fade show active" id="sources" role="tabpanel">
                {% for kind in ['Buckets', 'GitRepositories', 'HelmRepositories', 'OCIRepositories'] %}
                    {% if flux_objects[kind] %}
                        {% with items=flux_objects[kind], kind=kind %}
                            {% include "segments/flux_table.html.j2" %}
                        {% endwith %}
                    {% else %}
                        {% set context = {'kind': kind, 'items': []} %}
                        {% include "segments/flux_table.html.j2" %}
                    {% endif %}
                {% endfor %}
            </div>

            <!-- KUSTOMIZATIONS TAB -->
            <div class="tab-pane fade" id="kustomizations" role="tabpanel">
                {% if flux_objects['Kustomizations'] %}
                    {% with items=flux_objects['Kustomizations'], kind='Kustomizations' %}
                        {% include "segments/flux_table.html.j2" %}
                    {% endwith %}
                    {% else %}
                        {% set context = {'kind': kind, 'items': []} %}
                        {% include "segments/flux_table.html.j2" %}
                {% endif %}
            </div>

            <!-- HELM RELEASES TAB -->
            <div class="tab-pane fade" id="helm" role="tabpanel">
                {% if flux_objects['HelmReleases'] %}
                    {% with items=flux_objects['HelmReleases'], kind='HelmReleases' %}
                        {% include "segments/flux_table.html.j2" %}
                    {% endwith %}
                {% else %}
                    {% set context = {'kind': 'HelmReleases', 'items': []} %}
                    {% include "segments/flux_table.html.j2" %}
                {% endif %}
            </div>

            <!-- NOTIFICATIONS TAB -->
            <div class="tab-pane fade" id="notifications" role="tabpanel">
                {% for kind in ['Alerts', 'Providers', 'Receivers'] %}
                    {% if flux_objects[kind] %}
                        {% with items=flux_objects[kind], kind=kind %}
                            {% include "segments/flux_table.html.j2" %}
                        {% endwith %}
                    {% else %}
                        {% set context = {'kind': kind, 'items': []} %}
                        {% include "segments/flux_table.html.j2" %}
                    {% endif %}
                {% endfor %}
            </div>

            <!-- CONNECTIONS TAB -->
            <div class="tab-pane fade" id="connections" role="tabpanel">
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">FluxCD Object Connections</h5>
                    </div>
                    <div class="card-body">
                        <div class="mermaid">
                            graph TD<br>
                            {% for kind, objects in flux_objects.items() if objects %}
                                {% for obj in objects if obj is mapping and obj.metadata %}
                                    {% set name = kind ~ "-" ~ obj.metadata.name %}
                                    {% if kind == "Kustomizations" and obj.spec and obj.spec.sourceRef %}
                                        {{ name }} --> {{ obj.spec.sourceRef.kind ~ "-" ~ obj.spec.sourceRef.name }}<br>
                                    {% elif kind == "HelmReleases" and obj.spec and obj.spec.chart and obj.spec.chart.spec and obj.spec.chart.spec.sourceRef %}
                                        {{ name }} --> {{ obj.spec.chart.spec.sourceRef.kind ~ "-" ~ obj.spec.chart.spec.sourceRef.name }}<br>
                                    {% elif kind in ["Alerts", "Receivers"] and obj.spec and obj.spec.providerRef %}
                                        {{ name }} --> {{ "Providers-" ~ obj.spec.providerRef.name }}<br>
                                    {% else %}
                                        {{ name }}<br>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% endblock %}

