{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Workloads</span></li>
          <li class="breadcrumb-item active"><span>ReplicaSets</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">ReplicaSet List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>Desired</th>
                      <th>Current</th>
                      <th>Ready</th>
                      <th>Owner</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for rs in replicasets %}
                    {% if selected == rs.name %}
                      <tr class="selected" >
                    {% else %}
                      <tr>
                    {% endif %}
                        <td>{{ rs.name }}</td>
                        <td>{{ rs.desired }}</td>
                        <td>{{ rs.current }}</td>
                        <td>{{ rs.ready }}</td>
                        {% if rs.owner %}
                        <td>
                          <form action="/workload/{{ rs.owner.split('/')[0] }}" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ rs.owner.split('/')[1] }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ rs.owner }}</a>
                          </form>
                        </td>
                        {% else %}
                          <td>-</td>
                        {% endif %}
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% endblock %}