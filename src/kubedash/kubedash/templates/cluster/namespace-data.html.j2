{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Cluster</span></li>
          <li class="breadcrumb-item"><a href="/cluster/namespace">Namespaces</a></li>
          <li class="breadcrumb-item active"><span>{{ ns_data.name }}</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Node Data</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="podInfoTable" width="100%" cellspacing="0">
                <tr>
                    <th>Status:</th>
                    <td>
                        {% if ns_data.status == "Active" %}
                            <span class="badge text-bg-tag text-bg-success">{{ ns_data.status }}</span>
                        {% else %}
                            <span class="badge text-bg-tag text-bg-danger">{{ ns_data.status }}</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>{{ ns_data.name }}</td>
                </tr>
                <tr>
                    <th>Created:</th>
                    <td>{{ ns_data.created }}</td>
                </tr>
                <!-- Disable Scale Function  
                <tr>
                    <th>Scale:</th>
                    <td>
                          {% if ns_data.name != "kube-system" and ns_data.live_workers == 0 %}
                          <form action="/cluster/namespace/scale" method="post">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden"  name="namespace" value="{{ ns_data.name }}"/>
                            <input type="hidden"  name="action" value="up"/>
                            <button class="btn btn-outline-success" type="submit">turn on</button>
                          </form>
                          {% else %}
                          <form action="/cluster/namespace/scale" method="post">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden"  name="namespace" value="{{ ns_data.name }}"/>
                            <input type="hidden"  name="action" value="down"/>
                            <button class="btn btn-outline-warning" type="submit">turn off</button>
                          </form>
                          {% endif %}
                    </td>
                    --- IGNORE --> 
                </tr>
                <tr>
                    <th>Annotations:</th>
                    <td>
                        {% if ns_data.annotations %}
                        <table class="table table-bordered" id="annotationTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="50%">Key</th>
                                    <th width="50%">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, value in ns_data.annotations.items() %}
                                <tr>
                                    <td width="50%">{{ key }}</td>
                                    <td width="50%">{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Lables:</th>
                    <td>
                        {% if ns_data.labels %}
                        <table class="table table-bordered" id="labelsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="50%">Key</th>
                                    <th width="50%">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, value in ns_data.labels.items() %}
                                <tr>
                                    <td width="50%">{{ key }}</td>
                                    <td width="50%">{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div> 
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% endblock %}