{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Storage</span></li>
          <li class="breadcrumb-item active"><span>StorageClass</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Storage Classes List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>Default</th>
                      <th>Reclaim Policy</th>
                      <th>Volume Binding Mode</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for sc in storage_classes %}
                    {% if selected == sc.name %}
                      <tr class="selected" >
                    {% else %}
                      <tr>
                    {% endif %}
                        <td>
                          <form action="/storage/storage-class/data" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="sc_name" value="{{ sc.name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ sc.name }}</a>
                          </form>
                        </td>
                        <td>
                          {% for an_key, an_value in sc.annotations.items() %}
                          {% if an_key == "storageclass.kubernetes.io/is-default-class"%}
                          {{an_value}}
                          {% endif %}
                          {% endfor %}
                        </td>
                        <td>
                          {{ sc.reclaim_policy }}
                        </td>
                        <td>
                          {{ sc.volume_binding_mode }}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snipet.html.j2" %}
{% endblock %}