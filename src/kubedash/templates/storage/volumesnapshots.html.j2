{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Storage</span></li>
          <li class="breadcrumb-item"><a href="/storage/volumesnapshot">volumesnapshots</a></li>
          <li class="breadcrumb-item active"><span>{{ vs.name }}</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Volume Snapshot List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Usable</th>
                      <th>Name</th>
                      <th>SnapshotClass</th>
                      <th>VolumeClaim</th>
                      <th>RestorSize</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for vs in snapshot_list %}
                    {% if selected == vs.name %}
                      <tr class="selected" >
                    {% else %}
                      <tr>
                    {% endif %}
                    {% if vs.status %}
                        <td>
                          <span class="badge text-bg-success text-bg-tag">{{ vs.status }}</span>
                        </td>
                    {% else %}
                        <td>
                          <span class="badge text-bg-danger text-bg-tag">{{ vs.status }}</span>
                        </td>
                    {% endif %}
                        <td>
                          {# 
                            <form action="/storage/volumesnapshot/data" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ vs.name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ vs.name }}</a>
                          #}
                          {{ vs.name }}
                          </form>
                        </td>
                        <td>
                          <form action="/storage/snapshot-class" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ vs.volume_snapshot_class }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ vs.volume_snapshot_class }}</a>
                          </form>
                        </td>
                        <td>
                          <form action="/storage/pvc" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ vs.pvc }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ vs.pvc }}</a>
                          </form>
                        </td>
                        <td>{{ vs.restore_size }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snipet.html.j2" %}
{% endblock %}