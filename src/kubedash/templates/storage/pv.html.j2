{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Storage</span></li>
          <li class="breadcrumb-item active"><span>PV</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Persistent Volume List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Status</th>
                      <th>Name</th>
                      <th>StorageClass</th>
                      <th>VolumeClaim</th>
                      <th>Capacity</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for pv in pv_list %}
                    {% if selected == pv.name %}
                      <tr class="selected" >
                    {% else %}
                      <tr>
                    {% endif %}
                    {% if pv.status == "Bound" %}
                        <td>
                          <span class="badge text-bg-success text-bg-tag">{{ pv.status }}</span>
                        </td>
                    {% elif  pv.status == "Terminating" %}
                        <td>
                          <span class="badge text-bg-danger text-bg-tag">{{ pv.status }}</span>
                        </td>
                    {% else %}
                        <td>
                          <span class="badge text-bg-warning text-bg-tag">{{ pv.status }}</span>
                        </td>
                    {% endif %}
                        <td>
                          <form action="/storage/pv/data" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ pv.name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pv.name }}</a>
                          </form>
                        </td>
                        <td>
                          <form action="/storage/storage-class" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ pv.storage_class_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pv.storage_class_name }}</a>
                          </form>
                        </td>
                        <td>
                          <form action="/storage/pvc" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ pv.volume_claim_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pv.volume_claim_name }}</a>
                          </form>
                        </td>
                        <td>{{ pv.capacity }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snipet.html.j2" %}
{% endblock %}