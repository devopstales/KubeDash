{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Storage</span></li>
          <li class="breadcrumb-item"><a href="/stotage/pvc">PVC</a></li>
          <li class="breadcrumb-item active"><span>{{ pvc_data.name }}</span></li>

        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Persistent Volume Claim Data</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="podInfoTable" width="100%" cellspacing="0">
                <tr>
                    <th>Status:</th>
                    <td>{{ pvc_data.status }}</td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>{{ pvc_data.name }}</td>
                </tr>
                <tr>
                    <th>Namespace:</th>
                    <td>{{ namespace }}</td>
                </tr>
                <tr>
                    <th>Created:</th>
                    <td>{{ pvc_data.created }}</td>
                </tr>
                <tr>
                    <th>Annotations:</th>
                    <td>
                        {% if pvc_data.annotations %}
                        <table class="table table-bordered" id="annotationTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="50%">Key</th>
                                    <th width="50%">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, value in pvc_data.annotations.items() %}
                                <tr>
                                    <td width="50%">{{ key }}</td>
                                    <td width="50%">{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Lables:</th>
                    <td>
                        {% if pvc_data.labels %}
                        <table class="table table-bordered" id="labelsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="50%">Key</th>
                                    <th width="50%">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, value in pvc_data.labels.items() %}
                                <tr>
                                    <td width="50%">{{ key }}</td>
                                    <td width="50%">{{ value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>StorageClass:</th>
                    <td>
                        <form action="/storage/storage-class" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ pvc_data.storage_class_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pvc_data.storage_class_name }}</a>
                        </form>
                    </td>
                </tr>
                <tr>
                    <th>Persistent Volume:</th>
                    <td>
                        <form action="/storage/pv" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="pv_name" value="{{ pvc_data.volume_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pvc_data.volume_name }}</a>
                        </form>
                    </td>
                </tr>
                <tr>
                    <th>Access Mode:</th>
                    <td>{{ pvc_data.access_modes }}</td>
                </tr>
                <tr>
                    <th>VolumeMode:</th>
                    <td>{{ pvc_data.volume_mode }}</td>
                </tr>
                <tr>
                    <th>Capacity:</th>
                    <td>{{ pvc_data.capacity }}</td>
                </tr>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snipet.html.j2" %}
{% endblock %}