            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'CPU Allocation',
                        font: {
                            size: 18,
                            weight: 'bold'
                        },
                        color: getThemeColor(),
                        padding: {
                            top: 10,
                            bottom: 15
                        }
                    },
                    legend: {
                        display: true,
                        position: 'bottom',
                        labels: {
                            color: getThemeColor(),
                            usePointStyle: true,
                            padding: 12,
                            font: {
                                size: 12
                            },
                            generateLabels: function(chart) {
                                let labels = [];
                                let datasetIndex = 0;
                                const themeColor = getThemeColor();

                                chart.data.datasets.forEach((dataset) => {
                                    dataset.data.forEach((value, index) => {
                                        if (!isNaN(value) && value > 0) {
                                            labels.push({
                                                text: chart.data.labels[datasetIndex * 2 + index] + ' (' + value.toFixed(1) + '%)',
