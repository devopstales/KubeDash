                        <div class="mb-3" style="position: relative; height: 300px;">
                            <canvas id="memory"></canvas>
                        </div>
                        <div class="mt-3">
                            <div class="row text-start small">
                                <div class="col-6 mb-2">
                                    <strong>Capacity:</strong><br>
                                    <span class="text-muted">{{ (node_metrics.memory.capacity / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Allocatable:</strong><br>
                                    <span class="text-muted">{{ (node_metrics.memory.allocatable / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Requests:</strong><br>
                                    <span class="text-muted">{{ (node_metrics.memory.requests / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Limits:</strong><br>
                                    <span class="text-muted">{{ (node_metrics.memory.limits / 1024 / 1024 / 1024) |round(2) }} GB</span>
