{% block content %}
{% if node_metrics and node_metrics.cpu and node_metrics.memory and node_metrics.pod_count %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Node Resource Metrics - {{ node_data.name }}</h6>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- CPU Chart -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card border-0" style="background-color: var(--cui-card-bg, #fff);">
                    <div class="card-body text-center">
                        <div class="mb-3" style="position: relative; height: 300px;">
                            <canvas id="cpu"></canvas>
                        </div>
                        <div class="mt-3">
                            <div class="row text-start small">
                                <div class="col-6 mb-2">
                                    <strong>Capacity:</strong><br>
                                    <span class="text-muted">{{ node_metrics.cpu.capacity |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Allocatable:</strong><br>
                                    <span class="text-muted">{{ node_metrics.cpu.allocatable |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Requests:</strong><br>
                                    <span class="text-muted">{{ node_metrics.cpu.requests |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Limits:</strong><br>
                                    <span class="text-muted">{{ node_metrics.cpu.limits |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Usage:</strong><br>
                                    <span class="text-muted">{{ node_metrics.cpu.usage |round(1) }} cores</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
