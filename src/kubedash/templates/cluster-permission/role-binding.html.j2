{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Cluster Permissions</span></li>
          <li class="breadcrumb-item active"><span>Role Bindings</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Role Bindings List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>Role</th>
                      <th>User</th>
                      <th>Group</th>
                      <th>ServiceAccount</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for rb in role_bindings %}
                    {% if rb_name == rb.name %}
                      <tr class="selected" >
                    {% else %}
                      <tr>
                    {% endif %}
                        <td>{{ rb.name }}</td>
                        <td>
                            {% for rbr in rb.role %}
                              {% for rbr_type, rbr_name in rbr.items() %}
                                {% if rbr_type == "Role" %}
                                  <form action="/cluster-permission/role/data" method="POST">
                                      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                      <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                                      <input type="hidden" name="r_name" value="{{ rbr_name }}" />
                                      <a href="javascript:;" onclick="parentNode.submit();">{{ rbr_name }}</a>
                                  </form>
                                {% elif rbr_type == "ClusterRole" %}
                                  <form action="/cluster-permission/cluster-role/data" method="POST">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                    <input type="hidden" name="cr_name" value="{{ rbr_name }}" />
                                    <a href="javascript:;" onclick="parentNode.submit();">{{ rbr_name }}</a>
                                  </form>
                                {% else %}
                                  {{ rbr_name }}
                                {% endif %}
                                {% if not loop.last %}<br>{% endif %}
                                {% endfor %}
                            {% endfor %}
                        </td>
                        <td>
                          {% for rbu in rb.user %}
                              {{ rbu }}{% if not loop.last %}<br>{% endif %}
                          {% endfor %}
                        </td>
                        <td>
                          {% for rbg in rb.group %}
                            {{ rbg }}{% if not loop.last %}<br>{% endif %}
                          {% endfor %}
                        </td>
                        <td>
                          {% for rbsa in rb.ServiceAccount %}
                            {% for rbsa_name, rbsa_ns in rbsa.items()  %}
                              <form action="/cluster-permission/service-account" method="POST">
                                  <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                  <input type="hidden" name="ns_select" value="{{ rbsa_ns }}" />
                                  <input type="hidden" name="selected" value="{{ rbsa_name }}" />
                                  <a href="javascript:;" onclick="parentNode.submit();">{{ rbsa_name }}</a>
                              </form>
                              {% if not loop.last %}<br>{% endif %}
                            {% endfor %}
                          {% endfor %}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}


{% block add_head_css %}
{% include "segments/datatable_snippet.html.j2" %}
{% endblock %}
