{% extends "base.html.j2" %}

{% block header %}
    <link href="{{ url_for('static',filename='/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet" >
    <link href="{{ url_for('static',filename='/vendor/datatables/jquery.dataTables.css') }}" rel="stylesheet" >
{% endblock %}

{% block content %}
{% if get_flashed_messages() %}
{% for category, message in get_flashed_messages(with_categories=true) %}
<div class="alert alert-{{category}} alert-dismissible fade show" role="alert">
  {{ message }}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{% endfor %}
{% endif %}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cluster Role List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>Labels</th>
                      <th>Annotations</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for cr in cluster_roles %}
                    {% if cluster_role_select == cr.name %}
                      <tr class="selected" >
                    {% else %}
                      <tr>
                    {% endif %}
                        <td>{{ cr.name }}</td>
                        <td>
                          {% if cr.labels %}
                          {% for lb_key, lb_value in cr.labels.items() %}
                          <span style="font-size: 85%" class="badge badge-secondary">{{ lb_key }}: {{ lb_value }}</span>
                          {% if not loop.last %}<br>{% endif %}
                          {% endfor %}
                          {% endif %}
                        </td>
                        <td>
                          {% if cr.annotations %}
                          {% for an_key, an_value in cr.annotations.items() %}
                          {% if an_key != "kubectl.kubernetes.io/last-applied-configuration" %}
                          <span style="font-size: 85%" class="badge badge-secondary">{{ an_key }}: {{ an_value }}</span>
                          {% if not loop.last %}<br>{% endif %}
                          {% endif %}
                          {% endfor %}
                          {% endif %}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
    <!-- Page level plugins -->
    <script src="{{ url_for('static',filename='vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ url_for('static',filename='vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script src="{{ url_for('static',filename='js/demo/datatables-demo.js') }}"></script>
{% endblock %}
