{% extends "base.html.j2" %}

{% block header %}
    <link href="{{ url_for('static',filename='/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet" >
    <link href="{{ url_for('static',filename='/vendor/google/material-icons.css') }}" rel="stylesheet" >
{% endblock %}

{% block content %}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">Storage</li>
    <li class="breadcrumb-item"><a href="/pvc">Persistent Volume Claims</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ pvc_data.name }}</li>
    <div class="col">
      <a class="card-link float-right" data-toggle="collapse" href="#" onclick="reload()">
        <i class="material-icons">refresh</i>
      </a>
    </div>
  </ol>
</nav>

<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Persistent Volume Claim Data</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="podInfoTable" width="100%" cellspacing="0">
                <tr>
                    <th>Status:</th>
                    <td>{{ pvc_data.status }}</td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>{{ pvc_data.name }}</td>
                </tr>
                <tr>
                    <th>Namespace:</th>
                    <td>{{ namespace }}</td>
                </tr>
                <tr>
                    <th>Created:</th>
                    <td>{{ pvc_data.created }}</td>
                </tr>
                <tr>
                    <th>Annotations:</th>
                    <td>
                        {% if pvc_data.annotations %}
                        {% for an_key, an_value in pvc_data.annotations.items() %}
                        {% if an_key != "kubectl.kubernetes.io/last-applied-configuration" %}
                        <span class="badge badge-secondary">{{ an_key }}: {{ an_value }}</span>
                        {% if not loop.last %}<br>{% endif %}
                        {% endif %}
                        {% endfor %}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Labels:</th>
                    <td>
                        {% if pvc_data.labels %}
                        {% for an_key, an_value in pvc_data.labels.items() %}
                        {% if an_key != "kubectl.kubernetes.io/last-applied-configuration" %}
                        <span class="badge badge-secondary">{{ an_key }}: {{ an_value }}</span>
                        {% if not loop.last %}<br>{% endif %}
                        {% endif %}
                        {% endfor %}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>StorageClass:</th>
                    <td>
                        <form action="/storage-class" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="selected" value="{{ pvc_data.storage_class_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pvc_data.storage_class_name }}</a>
                        </form>
                    </td>
                </tr>
                <tr>
                    <th>Persistent Volume:</th>
                    <td>
                        <form action="/pv" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="pv_name" value="{{ pvc_data.volume_name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ pvc_data.volume_name }}</a>
                        </form>
                    </td>
                </tr>
                <tr>
                    <th>Access Mode:</th>
                    <td>{{ pvc_data.access_modes }}</td>
                </tr>
                volume_mode
                <tr>
                    <th>VolumeMode:</th>
                    <td>{{ pvc_data.volume_mode }}</td>
                </tr>
                <tr>
                    <th>Capacity:</th>
                    <td>{{ pvc_data.capacity }}</td>
                </tr>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}

    <!-- Page level plugins -->
    <script src="{{ url_for('static',filename='vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ url_for('static',filename='vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script src="{{ url_for('static',filename='js/demo/datatables-demo.js') }}"></script>
{% endblock %}