{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Dashboard</span></li>
          <li class="breadcrumb-item active"><span>Cluster Metrics</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cluster Resource Metrics</h6>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- CPU Chart -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card border-0" style="background-color: var(--cui-card-bg, #fff);">
                    <div class="card-body text-center">
                        <div class="mb-3" style="position: relative; height: 300px;">
                            <canvas id="cpu"></canvas>
                        </div>
                        <div class="mt-3">
                            <div class="row text-start small">
                                <div class="col-6 mb-2">
                                    <strong>Capacity:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.cpu.capacity |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Allocatable:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.cpu.allocatable |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Requests:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.cpu.requests |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Limits:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.cpu.limits |round(1) }} cores</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Usage:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.cpu.usage |round(1) }} cores</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Memory Chart -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card border-0" style="background-color: var(--cui-card-bg, #fff);">
                    <div class="card-body text-center">
                        <div class="mb-3" style="position: relative; height: 300px;">
                            <canvas id="memory"></canvas>
                        </div>
                        <div class="mt-3">
                            <div class="row text-start small">
                                <div class="col-6 mb-2">
                                    <strong>Capacity:</strong><br>
                                    <span class="text-muted">{{ (cluster_metrics.clusterTotals.memory.capacity / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Allocatable:</strong><br>
                                    <span class="text-muted">{{ (cluster_metrics.clusterTotals.memory.allocatable / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Requests:</strong><br>
                                    <span class="text-muted">{{ (cluster_metrics.clusterTotals.memory.requests / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Limits:</strong><br>
                                    <span class="text-muted">{{ (cluster_metrics.clusterTotals.memory.limits / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Usage:</strong><br>
                                    <span class="text-muted">{{ (cluster_metrics.clusterTotals.memory.usage / 1024 / 1024 / 1024) |round(2) }} GB</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Pod Chart -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card border-0" style="background-color: var(--cui-card-bg, #fff);">
                    <div class="card-body text-center">
                        <div class="mb-3" style="position: relative; height: 300px;">
                            <canvas id="pod"></canvas>
                        </div>
                        <div class="mt-3">
                            <div class="row text-start small">
                                <div class="col-6 mb-2">
                                    <strong>Current:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.pod_count.current }} pods</span>
                                </div>
                                <div class="col-6 mb-2">
                                    <strong>Allocatable:</strong><br>
                                    <span class="text-muted">{{ cluster_metrics.clusterTotals.pod_count.allocatable |round(0) |int }} pods</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Cluster Events</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="white-space: nowrap;">Type</th>
                        <th style="white-space: nowrap;">Name</th>
                        <th style="white-space: nowrap;">Namespace</th>
                        <th style="white-space: nowrap;">Reason</th>
                        <th>Message</th>
                        <th style="white-space: nowrap;">Count</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in cluster_events %}
                    <tr>
                        <td style="white-space: nowrap;">{{ event.involvedObjectKind }}</td>
                        <td style="white-space: nowrap;">
                           {% if event.involvedObjectKind == "Pod" %}
                            <form action="/workload/pods" method="POST">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                <input type="hidden" name="ns_select" value="{{ event.namespace }}" />
                                <input type="hidden" name="selected" value="{{ event.involvedObjectName }}" />                                
                                <a href="javascript:;" onclick="parentNode.submit();">{{ event.involvedObjectName }}</a>
                            </form>
                            {% else %}
                            {{ event.involvedObjectName }}
                            {% endif %}
                        </td>
                        <td style="white-space: nowrap;">{{ event.namespace }}</td>
                        <td style="white-space: nowrap;">
                            <span class="badge text-bg-secondary">{{ event.reason }}</span>
                        </td>
                        <td>{{ event.message }}</td>
                        <td style="white-space: nowrap;">{{ event.count }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

