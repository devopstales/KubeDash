                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="securityTable" width="100%" cellspacing="0">
                                <!-- {{ pod_data.security_context }} -->
                                <thead>
                                    <tr>
                                    <th>Context</th>
                                    <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for item in pod_data.security_context.items() %}
                                    <tr>
                                        <td>{{ item[0] }}</td>
                                        <td>{{ item[1] }}</td>
                                    </tr>
                                {% endfor%}
                                </tbody>
                            </table>
