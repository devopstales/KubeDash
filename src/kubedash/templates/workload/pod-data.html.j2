{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Workloads</span></li>
          <li class="breadcrumb-item"><a href="/workload/pods">Pod</a></li>
          <li class="breadcrumb-item active"><span>{{ pod_data.name }}</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% if pod_data.init_containers or pod_data.containers %}
    <div class="container-fluid d-flex justify-content-end py-2 px-2">
        <form action="/workload/pods/exec" method="POST" class="form-post">
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
            <input type="hidden" name="po_name" value="{{ po_name }}" />
            <a class="card-link float-right pr-1" data-bs-toggle="collapse" href="javascript:;" onclick="parentNode.submit();">
                <i class="material-icons">input</i>
            </a>
        </form>
    </div>
    <div class="container-fluid d-flex justify-content-end py-2 px-2">
        <form action="/workload/pods/logs" method="POST" class="form-post">
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
            <input type="hidden" name="po_name" value="{{ po_name }}" />
            <a class="card-link float-right pr-1" data-bs-toggle="collapse" href="javascript:;" onclick="parentNode.submit();">
                <i class="material-icons">list</i>
            </a>
        </form>
    </div>
{% endif %}
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Pod Data</h6>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nav-pod-tab" data-bs-toggle="tab" href="#nav-pod" role="tab" aria-controls="nav-pod" aria-selected="true" data-bs-toggle="tab">Pod</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-containers-tab" data-bs-toggle="tab" href="#nav-containers" role="tab" aria-controls="nav-containers" aria-selected="false" data-bs-toggle="tab">Containers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-conditions-tab" data-bs-toggle="tab" href="#nav-conditions" role="tab" aria-controls="nav-conditions" aria-selected="false" data-bs-toggle="tab">Conditions</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-security-tab" data-bs-toggle="tab" href="#nav-security" role="tab" aria-controls="nav-security" aria-selected="false" data-bs-toggle="tab">Security Contexts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-resources-tab" data-bs-toggle="tab" href="#nav-resources" role="tab" aria-controls="nav-resources" aria-selected="false" data-bs-toggle="tab">Related Resources</a>
            </li>
        </ul>
        <div class="tab-content" id="nav-tabContent">
            <!-- pod -->
            <div class="tab-pane fade show active" id="nav-pod" role="tabpanel" aria-labelledby="nav-pod-tab">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="podInfoTable" width="100%" cellspacing="0">
                                <tr>
                                    <th>Namespace:</th>
                                    <td>{{ pod_data.namespace }}</td>
                                </tr>
                                <tr>
                                    <th>Name:</th>
                                    <td>{{ pod_data.name }}</td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                    {% if pod_data.status == "Running" %} 
                                    <span class="badge text-bg-success">{{ pod_data.status }}</span>
                                    {% elif pod_data.status == "Pending" %}
                                    <span class="badge text-bg-warning">{{ pod_data.status }}</span>
                                    {% elif pod_data.status == "Succeeded" %}
                                    <span class="badge text-bg-secondary">{{ pod_data.status }}</span>
                                    {% elif pod_data.status == "Terminated" or pod_data.status == "CrashLoopBackOff" %}
                                    <span class="badge text-bg-danger">{{ pod_data.status }}</span>
                                    {% else %}
                                    <span class="badge text-bg-secondary">{{ pod_data.status }}</span>
                                    {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Restarts:</th>
                                    <td>{{ pod_data.restarts }}</td>
                                </tr>
                                <tr>
                                    <th>Created:</th>
                                    <td>{{ pod_data.created }}</td>
                                </tr>
                                <tr>
                                    <th>Node:</th>
                                    <td>
                                        <form action="/cluster/node" method="POST">
                                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                            <input type="hidden" name="ns_select" value="{{ pod_data.namespace }}" />
                                            <input type="hidden" name="selected" value="{{ pod_data.node }}" />
                                            <a href="javascript:;" onclick="parentNode.submit();">{{ pod_data.node }}</a>
                                        </form>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Owner:</th>
                                    <td>
                                        <form action="/workload/{{ pod_data.owner.split('/')[0] }}" method="POST">
                                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                                            <input type="hidden" name="ns_select" value="{{ pod_data.namespace }}" />
                                            <input type="hidden" name="selected" value="{{ pod_data.owner.split('/')[1] }}" />
                                            <a href="javascript:;" onclick="parentNode.submit();">{{ pod_data.owner }}</a>
                                        </form>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Priority:</th>
                                    <td>{{ pod_data.priority }}</td>
                                </tr>
                                <tr>
                                    <th>Priority Class:</th>
                                    <td>{{ pod_data.priority_class_name }}</td>
                                </tr>
                                <tr>
                                    <th>Runetime Class:</th>
                                    <td>{{ pod_data.runtime_class_name }}</td>
                                </tr>
                                <tr>
                                    <th>Annotations:</th>
                                    <td>
                                        {% if pod_data.annotations %}
                                        <table class="table table-bordered" id="annotationTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th width="50%">Key</th>
                                                    <th width="50%">Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for key, value in pod_data.annotations.items() %}
                                                <tr>
                                                    <td width="50%">{{ key }}</td>
                                                    <td width="50%">{{ value }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        {% endif %}
                                    </td>
                                </tr>
                               <tr>
                                    <th>Lables:</th>
                                    <td>
                                        {% if pod_data.labels %}
                                        <table class="table table-bordered" id="labelsTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th width="50%">Key</th>
                                                    <th width="50%">Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for key, value in pod_data.labels.items() %}
                                                <tr>
                                                    <td width="50%">{{ key }}</td>
                                                    <td width="50%">{{ value }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- containers -->
            <div class="tab-pane fade" id="nav-containers" role="tabpanel" aria-labelledby="av-containers-tab">
                <div id="accordion">
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            {% if pod_data.init_containers %}
                            <h3>Init Containers</h3>
                            
                            <div class="table-responsive">
                                <table class="table table-bordered" id="initContainersTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            {% if has_report %}
                                            <th style="width:5%"></th>
                                            {% endif %}
                                            <th>State</th>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Restarts</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for ic in pod_data.init_containers %}
                                        <tr>
                                            {% if ic.ready == "Completed" %}
                                            <td><span class="badge text-bg-secondary">{{ ic.ready }}</span></td>
                                            {% elif ic.ready == "ImagePullBackOff" or ic.ready == "ErrImagePull" or ic.ready == "Error" or ic.ready == "CrashLoopBackOff" %}
                                            <td><span class="badge text-bg-danger">{{ ic.ready }}</span></td>
                                            {% else %}
                                            <td><span class="badge text-bg-secondary">{{ ic.ready }}</span></td>
                                            {% endif %}
                                            <td>{{ ic.name }}</td>
                                            <td>{{ ic.image }}</td>
                                            <td>{{ ic.restarts }}</td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            {% endif %}
                            <h3>Containers</h3>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="containersTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            {% if has_report %}
                                            <th style="width:5%"></th>
                                            {% endif %}
                                            <th>State</th>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Restarts</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for c in pod_data.containers %}
                                        <tr>
                                            {% if c.ready == "Running"%}
                                            <td><span class="badge text-bg-success">{{ c.ready }}</span></td>
                                            {% elif c.ready == "ImagePullBackOff" or c.ready == "ErrImagePull" or c.ready == "Error" or c.ready == "CrashLoopBackOff" %}
                                            <td><span class="badge text-bg-danger">{{ c.ready }}</span></td>
                                            {% elif c.ready == "PodInitializing"%}
                                            <td><span class="badge text-bg-info">{{ c.ready }}</span></td>
                                            {% else %}
                                            <td><span class="badge text-bg-secondary">{{ c.ready }}</span></td>
                                            {% endif %}
                                            <td>{{ c.name }}</td>
                                            <td>{{ c.image }}</td>
                                            <td>{{ c.restarts }}</td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
