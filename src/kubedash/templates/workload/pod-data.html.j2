                            <table class="table table-bordered" id="containersConditiosTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Condition</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                            {% for dict_item in pod_data.conditions %}
                            <tbody>
                                    {% for key, value in dict_item.items() %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td>{{ value }}</td>
                                    </tr>
                                    {% endfor%}
                                </tbody>
