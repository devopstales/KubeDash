{% extends "base2.html.j2" %}

{% block topmenu %}
<ul class="header-nav d-lg-flex m-3">
    <div class="container-fluid px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-0">
          <li class="breadcrumb-item"><span>Workloads</span></li>
          <li class="breadcrumb-item active"><span>Pods</span></li>
        </ol>
      </nav>
    </div>
</ul>
<ul class="header-nav ms-auto"></ul>
<ul class="header-nav d-lg-flex">
{% include "segments/topmenu.html.j2" %}
{% endblock %}

{% block content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Pod List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th>Status</th>
                      <th>Name</th>
                      <th>Pod IP</th>
                      <th>Owner</th>
                      {% if has_report %}
                      <th>Report</th>
                      <th>Critical</th>
                      <th>High</th>
                      <th>Medium</th>
                      <th>Low</th>
                      {% endif %}
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for po in pods %}
                      <tr>
                        <td>
                        {% if po.status == "Running" %} 
                          <span class="badge text-bg-success">{{ po.status }}</span>
                        {% elif po.status == "Pending" %}
                          <span class="badge text-bg-warning">{{ po.status }}</span>
                        {% elif po.status == "Succeeded" %}
                          <span class="badge text-bg-secondary">{{ po.status }}</span>
                        {% else %}
                          <span class="badge text-bg-info">{{ po.status }}</span>
                        {% endif %}
                        </td>
                        <td>
                          <form action="/workload/pod/data" method="POST">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                            <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                            <input type="hidden" name="po_name" value="{{ po.name }}" />
                            <a href="javascript:;" onclick="parentNode.submit();">{{ po.name }}</a>
                          </form>
                        </td>
                        <td>{{ po.pod_ip }}</td>
                        {% if po.owner %}
                        <td>
                            <form action="/workload/{{ po.owner.split('/')[0] }}" method="POST">
                              <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                              <input type="hidden" name="ns_select" value="{{ session['ns_select'] }}" />
                              <input type="hidden" name="selected" value="{{ po.owner.split('/')[1] }}" />
                              <a href="javascript:;" onclick="parentNode.submit();">{{ po.owner }}</a>
                          </form>
                        </td>
                        {% else %}
                          <td>-</td>
                        {% endif %}
                        <!-- 
                        {% if has_report %}
                        <td>
                          {% if po.scan_status == "OK" %}
                            <span class="badge text-bg-success">{{ po.scan_status }}</span>
                          {% elif po.scan_status == "Error" %}
                            <span class="badge text-bg-warning">{{ po.scan_status }}</span>
                          {% else %}
                            <span class="badge text-bg-info">{{ po.scan_status }}</span>
                          {% endif %}
                        </td>
                        <td><span class="badge text-bg-danger">{{ po.critical }}</span></td>
                        <td><span class="badge text-bg-warning">{{ po.high }}</span></td>
                        <td><span class="badge text-bg-primary">{{ po.medium }}</span></td>
                        <td><span class="badge text-bg-secondary">{{ po.low }}</span></td>
                        {% endif %}
                        -->
                        <td>
                          <form action="/workload/pod/delete" method="POST">
                              <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                              <input type="hidden"  name="pod_name" value="{{ po.name }}"/>
                              <button type="submit" rel="tooltip" class="btn btn-danger btn-just-icon btn-sm" value="upvote">
                                  <i class="material-icons">delete</i>
                              </button>
                          </form>          
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block add_head_css %}
{% include "segments/datatable_snipet.html.j2" %}
{% endblock %}